{
	"name": "ommu/siks",
	"description": "Sistem Informasi Kearsipan Statis (SIKS) Web Apps From OMMU",
	"type": "ommu-apps",
	"keywords": [
		"apps",
		"web-apps",
		"arsip-web-apps",
		"siks",
		"sikn",
		"jikn",
		"anri",
		"arsip",
		"arsip-statis",
		"ommu2",
		"yii2"
	],
	"license": "Apache-2.0",
	"homepage": "https://github.com/ommu/app-siks",
	"support": {
		"issues": "https://github.com/ommu/app-siks/issues",
		"wiki": "https://github.com/ommu/app-siks/wiki",
		"source": "https://github.com/ommu/app-siks"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ommu/app-siks.git"
	},
	"authors": [
		{
			"name": "Putra Sudaryanto",
			"email": "putra@ommu.id",
			"homepage": "https://ommu.id",
			"role": "Creator"
		}
	],
	"require": {
		"php": "~7.0",
		"ommu/archive": "dev-master",
		"ommu/stackadmin": "@dev"
	},
	"scripts": {
		"post-create-project-cmd": [
			"yii\\composer\\Installer::postInstall"
		],
		"post-install-cmd": [
			"yii\\composer\\Installer::postInstall"
		]
	},
	"extra": {
		"yii\\composer\\Installer::postInstall": {
            "copyFiles": [
                {
					"apps.json": "siks/apps.json"
                }
            ],
			"setPermission": [
				{
					"siks/assets": "0777",
					"siks/cache": "0777",
					"siks/app/runtime": "0777",
					"siks/apps.json": "0777"
				}
			]
		}
	}
}